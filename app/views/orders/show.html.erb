<h5>注文履歴詳細</h5>

<div class="container">
  <div class="row">
    <div class="col-sm">
  <strong>注文情報</strong>

<table>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
    <tr>
    <th>配送先</th>
    <td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
  </tr>  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
</table>
    </div>

    <div class="col-sm">

<strong>請求情報</strong>

  <% sum = 0 %>
   <% @cart_items.each do |item| %>
   <!--billing_amount-->
    <% sum += (item.item.price * item.amount) %>
     <% end %>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= sum %></td>
  </tr>
    <tr>
    <th>配送料</th>
    <td><%= @order.shipping_cost %></td>
  </tr>  <tr>
    <th>ご請求額</th>
    <td><%= sum + @order.shipping_cost %></td>
  </tr>
</table>
    </div>
  </div>
</div>















<br>
<strong>注文内容</strong>
<br>

<table class="table">
  <thead>
    <tr class="table-warning">
      <th scope="col">商品</th>
      <th scope="col">単価（税込）</th>
      <th scope="col">個数</th>
      <th scope="col">小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
<% @cart_items.each do |item| %>
      <td><%= item.item.name %></td>
      <td><%= item.item.price %></td>
      <td><%= item.amount %></td>
      <td><%= (item.item.price * item.amount) %></td>
      <% end %>
    </tr>
  </tbody>
</table>

