<h6>注文履歴一覧</h6>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払金額</th>
      <th>注文詳細</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <tr>
      <% @orders.each do |order| %>
       <td><%= order.timestamp %></td>
       <td><%= order.address %></td>
       <td><%= order.price %></td>
       <td><%= link_to "表示する", order_path, class: "btn btn-primary" %></td>
     </tr>
       <% end %>
  </tbody>
</table>

