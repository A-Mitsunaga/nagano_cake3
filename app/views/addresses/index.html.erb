<h5>配送先登録/一覧</h5>

<%= form_with model:@address, url:addresses_path, local:true do |f| %>
<h6>郵便番号(ハイフンなし)</h6><%= f.text_field :postal_code %>
<h6>住所</h6><%= f.text_field :address, class: "hoge" %>
<h6>宛名</h6><%= f.text_field :name %>

<%#= f.hidden_field :item_id, :value => @item.id %>
<%#= f.hidden_field :customer_id, :value => current_customer.id %>
<br>
<%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>

 <table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @addresses.each do |address| %>

     <tr>
       <td><%= address.postal_code  %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
       <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %></td>
       <td></td>
     </tr>

       <% end %>
  </tbody>
</table>
