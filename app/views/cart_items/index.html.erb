<h6>ショッピングカート</h6>
<div class= "text-right"><%= link_to "カートを空にする", destroy_all_cart_item_path(@cart_items), method: :delete, class: "btn btn-danger" %></div>
  <table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <td></td>
    </tr>
    </thead>
  <tbody>
    <%#= form_with model: @item, url: cart_items_path, id: 'cart_item', class:'cart_item', local: true do |f| %>
      <% sum = 0 %>
      <% @cart_items.each do |item| %>
     <tr>

       <td><%= item.item.name %></td>
       <td><%= item.item.price %></td>
       <td><%= item.amount %></td>
       <td><%= (item.item.price * item.amount) %></td>
       <% sum += (item.item.price * item.amount) %>
       <td><%= link_to "削除する", destroy_cart_item_path(@cart_items), method: :delete, class:"btn btn-danger"  %></td>

     </tr>
       <% end %>
       <strong>合計金額</strong>
       <%= sum %>

  </tbody>
</table>
<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
<br>
<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
