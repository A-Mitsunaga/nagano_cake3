
<h6>ショッピングカート</h6>

  <table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <td></td>
    </tr>
  </thead>
  <tbody>
      <% @cart_items.each do |item| %>
     <tr>
       <td><%= item.item.name %></td>
       <td><%= item.item.price %></td>
       <td><%= item.amount %><%#= f.collection_select :amount, Address.all, :id, :postal_code_address_name, :prompt => "選択してください" %></td>
       <td><%#= item.total_price %></td>
       <td><%#= link_to "削除する", destroy_cart_item_path(), method: :delete, "data-confirm" => "本当に作事しますか" %></td>
     </tr>
       <% end %>
  </tbody>
</table>

