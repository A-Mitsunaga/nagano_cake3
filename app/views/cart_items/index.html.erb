

<h6>ショッピングカート</h6>
<%#= button_to "カートを空にする", destroy_all_cart_item_path, method: :delete, class: "btn btn-danger" %>
  <table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <td></td>
    </tr>
    </thead>
  <tbody>
    <%#= form_with model: @item, url: cart_items_path, id: 'cart_item', class:'cart_item', local: true do |f| %>

      <% @cart_items.each do |item| %>
     <tr>

       <td><%= item.item.name %></td>
       <td><%= item.item.price %></td>
       <td><%= item.amount %></td>
       <td><%= (item.item.price * item.amount) %></td>
       <td><%#= link_to "削除する", destroy_cart_item_path(item.item.id), method: :delete %></td>
     </tr>
       <% end %>
       <%# end %>
       <%#end %>

  </tbody>
</table>

