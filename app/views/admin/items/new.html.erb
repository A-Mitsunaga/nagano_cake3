<h1>商品新規登録</h1>
<%= form_with model: @item, local:true do |f| %>
<h3>商品画像</h3>
          <%#= f.attachment_field :image, class: "w-100" %>
<%#= f.attachment_field :image %>
<%#= f.submit '投稿' %>
<%# end %>

<div class="field"></div>
<h4>商品名</h4>
<%= text_field_tag "name", "商品名" %>
<!--<input type="text" placeholder="商品名" ></input>-->
</div>

<h4>商品説明</h4>
<%= f.text_area :introduction %>
<input type="text" placeholder="ここに説明文を記述します" ></input>

<h4>ジャンル</h4>
<%= f.text_field :genre_id %>

<h4>税込価格</h4>
<%= f.text_field :price %>
<input type="text" placeholder="1100" ></input>

<h4>販売ステータス</h4>
<%= f.text_field :is_active %></br>
<br>
<%= f.submit '新規登録' %>

<% end %>