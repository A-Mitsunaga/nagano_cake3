<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

<div class="field">
    <%= f.label :名前 %>
    （姓）<input type="text" placeholder="令和" ></input>　（名）<input type="text" placeholder="道子" ></input></br>
</div>


 <div class="field">
    <%= f.label :フリガナ %>
    （セイ）<input type="text" placeholder="レイワ" ></input>　（メイ）<input type="text" placeholder="ハナコ" ></input></br>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %>
    <!--<input type="text" placeholder="sample@example.com" ></input>-->
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


<div class="field">
  <%= f.label :郵便番号（ハイフンなし） %>
  <input type="text" placeholder="0000000" ></input>
</div>


<div class="field">
  <%= f.label :住所 %>
  <input type="text" placeholder="東京都渋谷区代々木神園町0-0" ></input>
</div>


<div class="field">
  <%= f.label :電話番号（ハイフンなし） %>
  <input type="text" placeholder="00000000000" ></input>
</div>

 <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


 <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>既に登録済の方</h3>
<%= link_to "こちら", customer_session_path %>からログインしてください。
