<span style="color:#000000; background-color:#d3d3d3;">会員情報編集</span>
<%=form_with model: @customer,url: edit_customer_registration_path, id: 'edit_customer', class:'edit_customer', local: true do |f| %>

<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <p>氏名</p>
      <p>フリガナ</p>
      <p>郵便番号</p>
      <p>住所</p>
      <p>電話番号</p>
      <p>メールアドレス</p>
      <p>会員ステータス</p>

    </div>
    <div class="col-sm-10">
    <p><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %> <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></p>
    <p><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %> <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></p>
    <p><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></p>
    <p><%= f.text_field :address, autofocus: true, autocomplete: "address" %></p>
    <p><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></p>
    <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
    <br>
    <div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    <%= link_to '退会する', customers_unsubscribe_path, class: "btn  btn-danger" %>
    </div>
    </div>
  </div>
</div>
<% end %>